<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC configuration -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:weather_viewer</property>
        <property name="hibernate.connection.username">turtleOnARock</property>
        <property name="hibernate.connection.password"></property>

        <!-- JDBC connection pool -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">10</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>


        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- TEST - Remove before deploy-->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.highlight_slq">true</property>

        <!-- Mapping entity classes -->
        <mapping class="com.turtleOnARock.weatherViewer.entities.User"/>
        <mapping class="com.turtleOnARock.weatherViewer.entities.Location"/>
        <mapping class="com.turtleOnARock.weatherViewer.entities.Session"/>
    </session-factory>
</hibernate-configuration>